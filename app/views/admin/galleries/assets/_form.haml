#asset_upload-form
  - form_for :asset, :url => create_admin_gallery_asset_path(:format => 'js'), :html => { :method => "post", :multipart => true, :target => 'ulframe' } do |form|
    %div.file
      %label.upload Choose a file to upload
      = form.file_field :asset, :class => "", :style => "width: 100%"

    .upload-buttons
      = form.submit "Save and Upload", :class => "button"
      %div.spinner
        
  %iframe{ :id => 'ulframe', :name => "ulframe", :src => "about:blank", :style => "margin-left: 20px"}

%a#asset_create-popup_close{ :href => '#'} Close